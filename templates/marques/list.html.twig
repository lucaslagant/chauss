{% extends 'base.html.twig' %}

{% block title %}{{ category.name}}{% endblock %}

{% block body %}
<main class="container my-5">
    <section class="row my-3">
        <div class="col-12">
            <h1>Liste des produits de {{ category.name }}</h1>
        </div>
        <div class="col-12">
            <a href="{{ path('marques')}}" class="btn btn-rouge">Retour</a>    
        </div>
        {% for product in products %}
        <div class="col-4 my-5">
            <article class="card h-100">
             <img src=" {{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name )}}" class="card-img-top" alt="{{ product.name }}">
                <div class="card-body">
                    <h2 class="card-title my-3">{{ product.name }}</h2>
                    <p class="card-text my-5">{{ product.description }}</p>
                    <a href="{{ path('products_details', {"slug": product.slug }) }}" class="btn btn-rouge">Voir les d√©tails</a>
                </div>
            </article>
        </div>
        {% endfor %}
    </section>
</main>
{% endblock %}