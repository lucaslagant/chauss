{% extends 'base.html.twig' %}

{% block title %}Marques{% endblock %}

{% block body %}
<main class="container my-5">
    <section class="row my-3">
        {% for category in categories %}
        {% if category.parent == null %}
        <div class="col-lg-12 my-sm-3">
            <h2 class="fw-bold">{{ category.name }}</h2>
        </div>
        {% else %}
        <div class="col-lg-4">
            <div class="card h-100">
                <img src="#" class="card-img-top w-100 p-5" alt="Logo des marques">
                <div class="card-body">
                    <h3 class="card-title">{{ category.name }}</h3>
                    <p class="card-text">
                        Découvrez nos modèles à bon prix !
                    </p>
                    <a href="#" class="btn btn-rouge text-bold">Voir les produits</a>
                </div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
    </section>
</main>
{% endblock %}