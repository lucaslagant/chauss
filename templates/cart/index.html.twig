{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
{# {{ dump(cart) }} #}
<main class="page-wrapper">
    {% if cart|length > 0 %}
        <div class="container position-relative zindex-2 pt-5 pb-lg-5 pb-md-4 pb-2">
            <div class="row">
                <div class="col-lg-12 offset-lg-1 pt-1">
                    <h2 class="pt-md-2 my-4 mt-lg-5">Mon panier</h2>
                    <p>Ajouter d'autre articles disponible <a href="{{path('marques') }}"> Voir les autres articles</a></p>
                    {% set total = null %}
                    {% for item in cart %}
                    {% set total = total + (item.product.price * item.quantity) %}
                        <div class="d-sm-flex align-items-center border-top py-4">
                            <div class="w-100 pt-1 ps-sm-4">
                                <div class="d-flex">
                                    <div class="me-3">
                                        <h3 class="h5 mb-2">
                                            <a href="#">{{ item.product.name}}</a>
                                        </h3>
                                        <p class="mb-2">{{item.product.description}}</p>
                                    </div>
                                    <div class="text-end ms-auto">
                                        <div class="fs-5 mb-2">{{ item.product.price }} €</div>
                                    </div>
                                </div>
                                <div class="count-input ms-n3">
                                    <a href="{{ path('cart_decrease', {id: item.product.id}) }}" class="btn btn-icon fs-xl" data-decrement>-</a>
                                    <input type="form-control" type="number" value="{{ item.quantity }}" readonly>
                                    <a href="{{ path('cart_add', {id: item.product.id}) }}" class="btn btn-icon fs-xl" data-increment>+</a>
                                </div>
                                <div class="nav justify-content-end mt-n5 mt-sm-n3">
                                    <a href="#" data-bs-toggle="tooltip" title="Remove">
                                        <i class="ai-trash"></i>
                                    </a>
                                </div>
                                <div class="nav justify-content-end mt-n5 mt-sm-n3">
                                    <a href="#" data-bs-toggle="tooltip" title="Remove" class="btn btn-rouge">X</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    <ul class="list-unstyled py-3 mb-0">
                        <li class="d-flex justify-content-between mb-2">Nombre de produit: <span class="fw-semibold ms-2">{{ cart|length }}</span></li>
                    </ul>
                    <div class="d-flex align-items-center justify-content-between border-top fs-xl pt-4">
                        Total: <span class="fw-semibold ms-2">{{ (total)|number_format(2, ',', '.' ) }} €</span>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="container d-flex flex-column justify-content-center min-vh-100 py-5">
                <div class="text-center pt-4 mt-lg-2">
                    <h1 class="display-5">Votre panier est vide</h1>
                    <p class="fs-lg pb-2 pb-md-0 mb-4 mb-md-5">Commencez votre shopping dès maintenant à travers nos articles</p>
                    <a href="{{path('marques') }}" class="btn btn-lg btn-rouge">Voir les produits</a>
                </div>
            </div>   
    {% endif %}
    
</main>
{% endblock %}
